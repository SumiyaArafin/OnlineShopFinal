@model IEnumerable<OnlineShopFinal.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<div class="col-md-4">
    <a onclick="showInPopup('@Url.Action("AddOrEdit","Employees",null,Context.Request.Scheme)','Employee Details' )" class="btn bg-info text-white"><i class="fas fa-random"></i> New Employee</a>
    <i class="glyphicon glyphicon-plus"></i>

</div>

<div id="placeHolderHere"></div>
<hr />
<div id="view-all" class="card-body">
    @await Html.PartialAsync("_ViewAll", Model)
</div>


@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}