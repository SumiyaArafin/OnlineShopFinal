
@model OnlineShopFinal.Models.ViewModels.ModelViewModel
@using OnlineShopFinal.Extensions
@{
    ViewData["Title"] = "Edit";
}

<br />
<h2 class="text-info">Edit SubCategory</h2>
<form method="post" asp-action="Edit">
    <input hidden asp-for="SubCategory.Id" />
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Categories"></label>
        </div>
        <div class="col-4">
            <select asp-for="SubCategory.CategoryId" asp-items="Model.Categories.ToSelectListItem()" class="form-control"></select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="SubCategory.Name"></label>
        </div>
        <div class="col-4">
            <input asp-for="SubCategory.Name" class="form-control" />
        </div>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" class="btn btn-primary" asp-route-id="@Model.SubCategory.Id" value="Update" />
        <a asp-action="Index" class="btn btn-success">Back</a>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync(partialViewName: "_ValidationScriptsPartial"); }
}