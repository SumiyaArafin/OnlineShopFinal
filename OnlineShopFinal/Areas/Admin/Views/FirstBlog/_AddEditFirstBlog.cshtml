@model OnlineShopFinal.ViewModel.FirstBlogViewModel

<form method="post" enctype="multipart/form-data" asp-action="AddEditFirstBlog">

    <div class="modal fade" id="addEmployee">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="addEmployeeLabel">Add FirstBlog</h4>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>x</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="Name"></label>

                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="BlogHeader"></label>
                        <input asp-for="BlogHeader" class="form-control" />
                        <span asp-validation-for="BlogHeader" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BlogDetails"></label>
                        <input asp-for="BlogDetails" class="form-control" />
                        <span asp-validation-for="BlogDetails" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BlockQuote"></label>

                        <input asp-for="BlockQuote" class="form-control" />
                        <span asp-validation-for="BlockQuote" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="BlockQuoteDetails"></label>
                        <input asp-for="BlockQuoteDetails" class="form-control" />
                        <span asp-validation-for="BlockQuoteDetails" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Image"></label>
                        <input type="file" class="form-control" asp-for="Image" multiple />

                    </div>
                    <div class="form-group">
                        <label asp-for="Date"></label>
                        <input asp-for="Date" class="form-control" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                </div>

                <div class="modal-footer">

                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                    <input type="submit" class="btn btn-primary" value="Update" />
                </div>

            </div>
        </div>
    </div>
</form>
@section Scripts{
    @{ await Html.RenderPartialAsync(partialViewName: "_ValidationScriptsPartial"); }
}