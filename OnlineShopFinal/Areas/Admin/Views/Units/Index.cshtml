                    <a href="#" id="btnDelete" class="btn btn-danger mr-3">Delete</a>
                    <a href="#" id="btnCancelConfirm" class="btn btn-primary">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="supplierId" />

